<%
  # home_active_class = current_page?(:controller => 'dogs', :action => 'index') ? 'active' : ''
  home_active_class = (current_page?('/') || current_page?(:controller => 'dogs', :action => 'index')) ? 'active' : ''
  about_active_class = current_page?(:controller => 'extra_pages', :action => 'about') ? 'active' : ''
%>

<!DOCTYPE html>
<html lang="en">

<head>
  <title>DogProfile</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link rel="shortcut icon" href="<%= asset_path 'paw_icon_transp_bgrd_860_x_805.png' %>"/>


  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
  <script type="application/x-javascript">
      addEventListener("load", function () {
          setTimeout(hideURLbar, 0);
      }, false);

      function hideURLbar() {
          window.scrollTo(0, 1);
      }
  </script>
  <!-- web-fonts -->
  <link href="//fonts.googleapis.com/css?family=Limelight" rel="stylesheet">
  <link href="//fonts.googleapis.com/css?family=Junge" rel="stylesheet">
  <link href='//fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic'
        rel='stylesheet' type='text/css'>
  <!-- //web-fonts -->
</head>

<body>
<!-- banner -->
<div class="agileits-banner">
  <div class="bnr-agileinfo">
    <div class="banner-top w3layouts">
      <div class="container">
        <ul class="agile_top_section">
          <li>
            <p> Pets Care !</p>
          </li>
          <li>
            <p><span class="fa fa-phone"></span>(786) 458-2150</p>
          </li>
          <% if current_user %>
            <li>
              <%= link_to new_dog_path, class: 'sign' do %>
                <i class="fa fa-paw" aria-hidden="true"></i>
                Add your dog
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, class: 'sign' do %>
                <i class="fa fa-sign-out" aria-hidden="true"></i>
                Sign out
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to new_user_session_path, class: 'sign' do %>
                <i class="fa fa-sign-in" aria-hidden="true"></i>
                Sign in
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path, class: 'sign' do %>
                <i class="fa fa-user-plus" aria-hidden="true"></i>
                Sign up
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="banner-w3text w3layouts">
      <!--      <p class="w3_text">Inspired by w3layouts</p>-->
      <!--      <h3 class="w3ls_agile">Dog Cat Pet Care </h3>-->

      <!--      <h2>Dog Profile</h2>-->
    </div>
    <!-- navigation -->
    <div class="top-nav w3-agiletop">
      <div class="agile_inner_nav_w3ls">
        <div class="navbar-header w3llogo">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <!--                    <h1>-->
          <!--                      <a href="index.html">Dog Profile</a>-->
          <%#= link_to 'Dog Profile', root_path %>
          <!--                    </h1>-->
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <div class="w3menu navbar-left">
            <ul class="nav navbar">
              <li><%= link_to 'Home', root_path, class: "#{home_active_class}" %></li>
              <li>
                <%= link_to extra_pages_path, class: "nav-link faa-parent animated-hover #{about_active_class}" do %>
                  About
                <% end %>
              </li>
            </ul>
          </div>
          <div class="w3ls-bnr-icons social-icon navbar-right">
            <%= link_to "https://www.reiniergarcia.com/", class: "social-button twitter", target: '_website' do %>
              <i class="fa fa-link"></i>
            <% end %>
            <%= link_to "https://www.linkedin.com/in/reymillenium/", class: "social-button twitter", target: '_linkedin' do %>
              <i class="fa fa-linkedin"></i>
            <% end %>
            <%= link_to "https://github.com/reymillenium/", class: "social-button twitter", target: '_github' do %>
              <i class="fa fa-github"></i>
            <% end %>
            <%= link_to "https://stackoverflow.com/users/9616949/reinier-garcia?tab=profile", class: "social-button twitter", target: '_stack' do %>
              <i class="fa fa-stack-overflow"></i>
            <% end %>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
    <!-- //navigation -->
  </div>
</div>
<!-- //banner -->
<!-- Modal1 -->
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>

        <div class="signin-form profile">
          <h3 class="agileinfo_sign">Sign In</h3>
          <div class="login-form">
            <form action="#" method="post">
              <input type="email" name="email" placeholder="E-mail" required="">
              <input type="password" name="password" placeholder="Password" required="">
              <div class="tp">
                <input type="submit" value="Sign In">
              </div>
            </form>
            tes
          </div>
          <div class="login-social-grids">
            <ul>
              <li><a href="#"><i class="fa fa-facebook"></i></a></li>
              <li><a href="#"><i class="fa fa-twitter"></i></a></li>
              <li><a href="#"><i class="fa fa-rss"></i></a></li>
            </ul>
          </div>
          <p><a href="#" data-toggle="modal" data-target="#myModal3"> Don't have an account?</a></p>


        </div>
      </div>
    </div>
  </div>
</div>
<!-- //Modal1 -->
<!-- Modal2 -->
<div class="modal fade" id="myModal3" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>

        <div class="signin-form profile">
          <h3 class="agileinfo_sign">Sign Up</h3>
          <div class="login-form">
            <form action="#" method="post">
              <input type="text" name="name" placeholder="Username" required="">
              <input type="email" name="email" placeholder="Email" required="">
              <input type="password" class="password" name="Password" id="password1" placeholder="Password" required=""/>
              <input type="password" class="password" name="Confirm Password" id="password2" placeholder="Confirm Password" required=""
                />
              <input type="submit" value="Sign Up">
            </form>
          </div>
          <p><a href="#"> By clicking register, I agree to your terms</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%= yield %>

<div class="copy-w3right">
  <div class="container">
    <div class="top-nav bottom-w3lnav">
      <ul>
        <li><%= link_to 'Home', root_path, class: "" %></li>
        <li>
          <%= link_to extra_pages_path, class: "nav-link faa-parent animated-hover" do %>
            About
          <% end %>
        </li>
      </ul>
    </div>
    <p> Developed by
      <%= link_to "https://www.linkedin.com/in/reymillenium/", class: "linkedin", target: '_linkedin' do %>
        Reinier Garcia
      <% end %> &copy; <%= Time.now.year.to_s %>. All rights reserved.
    </p>
  </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $(".scroll").click(function (event) {
            event.preventDefault();

            $('html,body').animate({
                scrollTop: $(this.hash).offset().top
            }, 1000);
        });
    });
</script>
</body>

</html>
